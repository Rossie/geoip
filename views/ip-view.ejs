<%- include('header-html'); %>

<body>
  <script>
    window.viewIp = '<%- data.ip %>';
    <% if (data.data) { %>
      window.mapLat = <%- data.data.lat %>;
      window.mapLng = <%- data.data.lon %>;
    <% } %>
  </script>
  <main role="main">

    <div class="ipgeo py-5 bg-light">
      <div class="container">

        <div class="row">

          <%- include('blocks/error', {data: data}) %>

          <div class="col-md-5">
            <div class="card mb-4 box-shadow">
              <div class="card-body">

                <h5 class="text-center bg-dark text-white p-3">
                  IP: <%= data.ip %>
                </h5>

                <% if (data.data) { %>
                  <%- include('blocks/ip-data-table', { ipdata: data.data }) %>
                <% } %>

              </div>
            </div>
          </div>

          <div class="col-md-7">
            <div class="card mb-4 box-shadow">
              <div id="map" class="subscriber ipfetched"></div>
            </div>
          </div>

          <% if (data.data && data.data.status == 'success') { %>
          <div class="col-md-12" id="comment_panel">
            <div class="card mb-4 box-shadow">
              <div class="card-body">

                <h5 class="card-title">
                  <i class="fa fa-fw fa-comment text-muted"></i> Comments on IP:
                  <span id="comments_title_ip"></span>
                </h5>

                <div class="card-text">

                  <ul class="list-group subscriber comment-post" id="commentList">
                    <% if (data.comments) { %>
                      <% data.comments.forEach(function(comment) { %>
                      <li class="list-group-item">
                        <h6 class="text-muted"><%= comment.post_date %></h6>
                        <p><%= comment.comment %></p>
                      </li>
                      <% }) %>
                    <% } %>
                  </ul>

                  <form class="mt-3 subscriber comment-post-invoked comment-post" id="commentForm">
                    <h6>Post New Comment</h6>
                    <div class="form-group">
                      <textarea class="form-control" id="txtComment" rows="3"></textarea>
                    </div>
                    <div class="text-center">
                      <button type="button" id="btnCommentPost" class="btn btn-primary mx-auto">
                        <i class="fa fa-fw fa-paper-plane"></i> Save</button>
                    </div>
                  </form>

                </div>
                <!-- .card-text -->

              </div>
              <!-- .card-body -->
            </div>
            <!-- .card -->
          </div>
          <!-- #comment_panel -->
          <% } %>

        </div>
        <!-- .row -->

      </div>
      <!-- .container -->
    </div>
    <!-- .ipgeo -->

  </main>

  <footer class="text-muted">
    <div class="container">
      <p class="float-right">
        <a href="#">Back to top</a>
      </p>
    </div>
  </footer>

  <%- include('footer-html'); %>