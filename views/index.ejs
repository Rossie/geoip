<%- include('header-html'); %>
<body>
  <script>
    <% if (data.ip) { %>
    window.viewIp = '<%- data.ip %>';
    <% } %>
    <% if (data.data) { %>
      window.mapLat = <%- data.data.lat %>;
      window.mapLng = <%- data.data.lon %>;
    <% } %>
  </script>

  <main role="main">

    <div class="ipgeo py-5 bg-light">
      <div class="container">

        <div class="row">

          <%- include('blocks/error', {data: data}) %>

          <div class="col-md-5">
            <div class="card mb-4 box-shadow">
              <div class="card-body">

                <form method="POST">
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <div class="input-group-text">IP</div>
                    </div>
                    <input type="text" name="ip" class="form-control" id="txtIpAddress" placeholder="IP Address" value="<%= data.ip %>" />
                    <div class="input-group-append">
                      <button class="btn" type="submit" >
                        <i class="fa fa-lg fa-search"></i>
                      </button>
                    </div>
                  </div>
                </form>

                <div class="alert alert-danger subscriber iplookup-error iplookup-invoked" id="lookupError" role="alert" style="display:none;"></div>

                <% if (data.data) { %>
                  <%- include('blocks/ip-data-table', { ipdata: data.data }) %>
                <% } %>

              </div>
            </div>
          </div>

          <div class="col-md-7">
            <div class="card mb-4 box-shadow">
              <div id="map" class="subscriber ipfetched"></div>
            </div>
          </div>

          <div class="col-md-12" id="ipCommentPanel" style="display:none;">
            <div class="card mb-4 box-shadow">
              <div class="card-body">
                <h5 class="card-title">API description</h5>
              </div>
            </div>
          </div>

        </div>
        <!-- .row -->

        <div class="row">

          <div class="col-md-12" id="apiPanel">
            <div class="card mb-4 box-shadow">
              <div class="card-body">
                <h5 class="card-title">
                  <i class="fa fa-fw fa-cog text-muted"></i> API description</h5>
                <div class="card-text">
                  <pre><code>example.com/api?format=json (just prints the user’s IP)
example.com/api?format=json&geo=true (print detailed geo data of the user’s IP)
Or, to get the details of another IP:
example.com/api?ip=1.2.3.4&format=json
example.com/api?ip=1.2.3.4&format=json&geo=true</code></pre>
                </div>
              </div>
            </div>
          </div>
          <!-- #apiPanel -->

        </div>
        <!-- .row -->

      </div>
      <!-- .container -->
    </div>
    <!-- .ipgeo -->

  </main>

  <footer class="text-muted">
    <div class="container">
      <p class="float-right">
        <a href="#">Back to top</a>
      </p>
    </div>
  </footer>

<%- include('footer-html'); %>
