<%- include('header-html'); %>

  <main role="main">

    <div class="ipgeo py-5 bg-light">
      <div class="container">

        <div class="row">

          <div class="col-md-5">
            <div class="card mb-4 box-shadow">
              <div class="card-body">

                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <div class="input-group-text">IP</div>
                  </div>
                  <input type="text" class="form-control" id="txtIpAddress" placeholder="IP Address" />
                  <div class="input-group-append">
                    <button class="btn" type="button" id="btnLookup">
                      <i class="fa fa-lg fa-search"></i>
                    </button>
                  </div>
                </div>

                <div class="alert alert-danger subscriber iplookup-error iplookup-invoked" id="lookupError" role="alert" style="display:none;"></div>

                <div class="card-text subscriber iplookup-invoked iplookup-data" id="lookupPanel" style="display: none;">
                  <pre><code class="jsonc subscriber iplookup-data" id="lookupResult"></code></pre>
                </div>

              </div>
            </div>
          </div>

          <div class="col-md-7">
            <div class="card mb-4 box-shadow">
              <div id="map" class="subscriber ipfetched"></div>
            </div>
          </div>

          <div class="col-md-12" id="ipCommentPanel" style="display:none;">
            <div class="card mb-4 box-shadow">
              <div class="card-body">
                <h5 class="card-title">API description</h5>
              </div>
            </div>
          </div>

          <div class="col-md-12" id="comment_panel" style="display: none;">
            <div class="card mb-4 box-shadow">
              <div class="card-body">

                <h5 class="card-title">
                  <i class="fa fa-fw fa-comment text-muted"></i> Comments on IP:
                  <span id="comments_title_ip"></span>
                </h5>

                <div class="card-text">
                  <ul class="list-group subscriber comment-data comment-invoked comment-post" id="commentList">
                    <li class="list-group-item">
                      <h6 class="text-muted">Comment 1 Title</h6>
                      <p>Text 1 content</p>
                    </li>
                  </ul>
                  <form class="mt-3 subscriber comment-post-invoked comment-post" id="commentForm">
                    <h6>Post New Comment</h6>
                    <div class="form-group">
                      <textarea class="form-control" id="txtComment" rows="3"></textarea>
                    </div>
                    <div class="text-center">
                      <button type="button" id="btnCommentPost" class="btn btn-primary mx-auto">
                        <i class="fa fa-fw fa-paper-plane"></i> Save</button>
                    </div>
                  </form>
                </div>

              </div>
              <!-- .card-body -->
            </div>
            <!-- .card -->
          </div>
          <!-- #comment_panel -->

        </div>
        <!-- .row -->

        <div class="row">

          <div class="col-md-12" id="apiPanel">
            <div class="card mb-4 box-shadow">
              <div class="card-body">
                <h5 class="card-title">
                  <i class="fa fa-fw fa-cog text-muted"></i> API description</h5>
                <div class="card-text">
                  <pre><code>example.com/api?format=json (just prints the user’s IP)
example.com/api?format=json&geo=true (print detailed geo data of the user’s IP)
Or, to get the details of another IP:
example.com/api?ip=1.2.3.4&format=json
example.com/api?ip=1.2.3.4&format=json&geo=true</code></pre>
                </div>
              </div>
            </div>
          </div>
          <!-- #apiPanel -->

        </div>
        <!-- .row -->

      </div>
      <!-- .container -->
    </div>
    <!-- .ipgeo -->

  </main>

  <footer class="text-muted">
    <div class="container">
      <p class="float-right">
        <a href="#">Back to top</a>
      </p>
    </div>
  </footer>

<%- include('footer-html'); %>
